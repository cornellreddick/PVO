@model IEnumerable<PVO.Models.Movie>
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table>
    <thead class="table table-bordered table-hover">
        <tr>
            <th>Movie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name,"Details","Movie", new {id = movie.Id}, null)</td>
            </tr>
        }
    </tbody>
</table>